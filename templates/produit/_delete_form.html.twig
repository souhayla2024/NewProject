<form method="post" action="{{ path('app_produit_delete', {'seqprod': produit.seqprod}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');" style="display: inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.seqprod) }}">
    <button type="submit" class="btn btn-danger" style="background: #dc3545; color: white; border: none; padding: 8px 16px; border-radius: 4px; cursor: pointer;">
        <i class="fa-solid fa-trash"></i>
        Supprimer
    </button>
</form>